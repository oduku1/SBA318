<!DOCTYPE html>
<html>
<head>
  <title><%= userName %>'s Applications</title>
  <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
</head>
<body>
  <h1><%= userName %>'s Job Applications</h1>
  <nav>
    <a href="/">Home</a> |
    <a href="/applications/add/<%=userName%>">Add New Application</a>
  </nav>

  <% if (applications.length === 0) { %>
    <p>No applications yet. <a href="/applications/add">Add one now</a>.</p>
  <% } else { %>
    <ul>
      <% applications.forEach(application => { %>
        <li>
          <strong><%= application.company %></strong> - 
          <%= application.position %> (<%= application.status %>)  
          | <a href="/applications/<%= application.userName %>/<%= application.id %>/edit">Edit</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>